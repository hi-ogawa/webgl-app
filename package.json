{
  "type": "module",
  "scripts": {
    "start": "serve -c config/serve.json",
    "deploy": "now -d -A config/now.json",
    "test": "mocha --file src/mocha_jsdom.js 'src/**/*.test.js'",
    "bench": "mocha -t 0 'src/**/*.bench.js'",
    "build": "snowpack install --config config/snowpack.config.json",
    "lint": "standard -v",
    "lint_all": "standard -v 'src/**/*.js'",
    "lint_diff": "standard -v $(git diff --staged --name-only | grep '.js$')",
    "lint:watch": "nodemon --watch src --ext js --exec \"npm run lint_all\"",
    "screenshot": "node scripts/screenshot.js",
    "screenshot_all": "bash scripts/screenshot_all.sh",
    "screenshot_all_with_server": "bash scripts/screenshot_all_with_server.sh"
  },
  "devDependencies": {
    "jsdom": "^16.2.2",
    "mocha": "^7.1.2",
    "nodemon": "^2.0.4",
    "now": "^19.0.0",
    "serve": "^11.3.0",
    "snowpack": "^2.0.0-beta.16",
    "standard": "^14.3.4"
  },
  "dependencies": {
    "aframe": "^1.0.4",
    "aframe-inspector": "^1.0.0",
    "lodash": "^4.17.15",
    "three": "^0.116.1"
  }
}
